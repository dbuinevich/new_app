<h1 class="text-center text-[32px] font-serif">User Info</h1>
<div class="w-full mt-10 w-2/3 mx-auto">
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        First Name
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"><%= @user.first_name %></p>
    </div>
    <div class="w-full md:w-1/2 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Last Name
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @user.last_name %></p>
    </div>
  
   <div class="w-full md:w-1/3 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Phone Number
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @user.phone_num %></p>
    </div>
  <div class="w-full md:w-1/3 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Email
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @user.email %></p>
    </div>
  <div class="w-full md:w-1/3 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Admin?
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @user.admin %></p>
    </div>
  </div>

 <div class="text-center grid grid-cols-[1fr_1fr] w-1/2 mx-auto my-4">
  <% unless current_user.blank? %>
    <% if can? :manage, @user %>
      <div class="actions mx-auto w-min bg-white hover:bg-red-500 hover:text-white text-gray-800 py-2 px-4 border border-gray-400 rounded shadow">
        <%= button_to "Delete", @user, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
      </div>
      <div class="w-min mx-auto bg-white hover:bg-amber-400/50 hover:text-black text-gray-800 py-2 px-7 border border-gray-400 rounded shadow p-1">
        <%= link_to "Edit", edit_user_path(@user) %>
      </div>
        <% flash.each do |type, msg| %>
          <div class="text-center">
            <%= msg %>
          </div>
        <% end %>
      <% end %>
      
    <% end %>
</div>