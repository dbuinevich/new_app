<h2 class="text-center">Add New User</h2>

<%= form_for @user, url: users_create_path do |f| %>

  <div class="field text-center">
    <label>First name</label><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field text-center">
  <label>Last name</label><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "surname" %>
  </div>

  <div class="field text-center">
  <label>Phone number</label><br />
    <%= f.text_field :phone_num, autofocus: true, autocomplete: "telephone number" %>
  </div>

  <div class="field text-center">
  <label>Email</label><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field text-center">
    <label>Password</label><br/>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field text-center">
    <label>Password confirmation</label><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field text-center">
    <label>Admin?</label><br />
    <%= f.check_box :admin, {value: true} %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Create User" %>
  </div>
<% end %>