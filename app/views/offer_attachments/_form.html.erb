<%= form_with(model: offer_attachment, class: "contents") do |form| %>
  <% if offer_attachment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(offer_attachment.errors.count, "error") %> prohibited this offer_attachment from being saved:</h2>

      <ul>
        <% offer_attachment.errors.each do |error| %>
          <li><%= error.full_message %></li>
