<div class="grid grid-cols-[2fr_1fr] justify-items-end mb-8">
  <h1 class="text-center font-serif text-6xl my-auto mr-48">All Brands</h1>
  <div class="grid grid-cols-2 justify-items-end self-center mr-28"> 
    <p
      class="text-center actions w-fit bg-green-500 hover:bg-green-700 text-white cursor-pointer font-semibold py-2 px-4 border border-gray-400 rounded shadow p-1 mr-4"
    >
      <%= link_to "Add Brand", new_brand_path %>
    </p>
    <p
      class="text-center actions justify-self-start w-fit bg-cyan-500 hover:bg-cyan-700 text-white cursor-pointer font-semibold py-2 px-4 border border-gray-400 rounded shadow p-1"
    >
      <%= link_to "Add Model", new_model_path %>
    </p>
  </div>
</div>
<div class="grid grid-cols-5 mx-20 justify-items-center gap-5">
  <% @brands.each do |brand| %>
    <% if can? :manage, brand %>
      
      <div class="grid justify-items-center mx-auto grid-cols-[1fr] my-4 gap-1">
    
        <div class="w-min font-semibold text-2xl self-center"><%= link_to brand.brand, "/brands/#{brand.id}" %></div>
        <div class="grid mx-auto grid-cols-[1fr_1fr] my-5 gap-10">
        <div class="w-min h-24px bg-white hover:bg-amber-400/50 hover:text-black text-gray-800 py-2 px-7 border border-gray-400 rounded shadow p-1">
        <%= link_to "Edit", edit_brand_path(brand) %>
    </div>
    <div class="actions w-min h-24px bg-white hover:bg-red-500 hover:text-white text-gray-800 py-2 px-4 border border-gray-400 rounded shadow">
        <%= button_to "Delete", brand, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
    </div>
    </div>
    </div>
    <% end %>
  <% end %>
</div>

<div class="digg_pagination text-center">
  <%= will_paginate @offers, :container => false %>
</div>
