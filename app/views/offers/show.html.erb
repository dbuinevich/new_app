<h1 class="font-semibold text-center text-2xl"> <%= @offer.brand.brand %> <%= @offer.model.model %></h1>

<div class="text-center grid grid-cols-[1fr_1fr] w-1/2 mx-auto my-4">
  <% unless current_user.blank? %>
    <% if can? :manage, @offer %>
      <div class="actions mx-auto w-min bg-white hover:bg-red-500 hover:text-white text-gray-800 py-2 px-4 border border-gray-400 rounded shadow">
        <%= button_to "Delete", @offer, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
      </div>
      <div class="w-min mx-auto bg-white hover:bg-amber-400/50 hover:text-black text-gray-800 py-2 px-7 border border-gray-400 rounded shadow p-1">
        <%= link_to "Edit", edit_offer_path(@offer) %>
      </div>
        <% flash.each do |type, msg| %>
          <div class="text-center">
            <%= msg %>
          </div>
        <% end %>
      <% end %>
      
    <% end %>
</div>
     

<div>
  <% @offer.image.each do |img| %>
    <%= image_tag img.url, style: "display: block;
    margin-left: auto;
    margin-right: auto;
    width: 40%" %>
  <% end %>
</div>

<div class="w-full mt-10 w-2/3 mx-auto">
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Year
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"><%= @offer.year %></p>
    </div>
    <div class="w-full md:w-1/3 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Engine type
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @offer.engine_type %></p>
    </div>
  <div class="w-full md:w-1/3 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
Drive Unit
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @offer.drive_unit %></p>
    </div>
   <div class="w-full md:w-1/3 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Transmission
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @offer.transmission %></p>
    </div>
  <div class="w-full md:w-1/3 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Engine Capacity
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @offer.engine_capacity %></p>
    </div>
  <div class="w-full md:w-1/3 px-3 mb-6">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Color
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @offer.color %></p>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Condition
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"><%= @offer.condition %></p>
      </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" >
        Price
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" ><%= @offer.price %> </p>
    </div>
    
    <div class="w-full md:w-2/3 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" >
        Contacts
      </label>
      <p class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" ><%= @offer.contacts %> </p>
    </div>
  </div>