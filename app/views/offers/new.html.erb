<h2 class="text-center text-[24px] font-serif">Create Your Offer</h2>

<%= form_for @offer do |f| %>

  <div data-controller="brand">
    <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
      <%= f.label :brand_id, 'Brand' %>
      <%= f.select :brand_id, Brand.all.collect {|p| [ p.brand, p.id ] }, {include_blank: true}, { data: { action: "change->brand#change" }} %>

    </div>

    <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
      <%= f.label :model_id, 'Model' %>
      <%= f.select :model_id, [], {}, { data: { brand_target: "modelSelect" }} %>
    </div>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Year</label>
    <%= f.number_field :year, autofocus: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Engine Type</label>
    <%= f.text_field :engine_type, autofocus: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Drive Unit</label>
    <%= f.text_field :drive_unit, autofocus: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Transmission</label>
    <%= f.text_field :transmission, autofocus: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Engine Capacity (cc)</label>
    <%= f.number_field :engine_capacity, autofocus: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Color</label>
    <%= f.text_field :color, autofocus: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Condition</label>
    <%= f.text_area :condition, autofocus: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Photo4ki</label>
  <%= f.file_field :image, multiple: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Price ($)</label>
    <%= f.number_field :price, autofocus: true %>
  </div>

  <div class="field text-center my-4 mx-12 grid grid-cols-[1fr_2fr] self-center gap-10">
  <label>Contacts</label>
    <%= f.text_area :contacts, autofocus: true %>
  </div>

  <div class="actions text-center bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow">
    <%= f.submit "Create Offer" %>
  </div>
<% end %>
